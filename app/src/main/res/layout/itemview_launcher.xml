<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_module_item">

    <com.ssmalllucky.android.ui.widget.STCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:STCardView_color="@color/text_color_primary"
        app:STCardView_enableStateList="false"
        app:STCardView_iconSize="60dp"
        app:STCardView_title="标题"
        app:STCardView_titleSize="@dimen/text_size_primary"
        app:cardCornerRadius="@dimen/spacing_m"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>