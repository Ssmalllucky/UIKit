<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_popspinner_item"
    android:gravity="center_vertical"
    android:minHeight="@dimen/settings_popup_item_height"
    android:paddingStart="@dimen/spacing_m"
    android:paddingEnd="@dimen/spacing_m"
    android:paddingTop="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_m">

    <com.ssmalllucky.android.ui.view.STSecondaryTextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_m"
        android:layout_weight="1"
        android:paddingStart="@dimen/spacing_s"
        android:lineSpacingExtra="2dp"
        app:textSize="@dimen/text_size_primary" />

    <ImageView
        android:id="@+id/searchImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_st_spinner_item_checked"
        android:visibility="invisible" />
</LinearLayout>
