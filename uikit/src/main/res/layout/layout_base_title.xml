<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_background"
    android:paddingStart="@dimen/spacing_m"
    android:paddingTop="@dimen/spacing_l"
    android:paddingEnd="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_xs">

    <ImageView
        android:id="@+id/backIV"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:rotationY="@integer/rotation"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ssmalllucky.android.ui.view.STPrimaryTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:text="界面标题"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/backIV"
        app:layout_constraintTop_toTopOf="parent"
        app:textSize="24sp" />


    <com.ssmalllucky.android.ui.view.STSecondaryTextView
        android:id="@+id/rightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本功能"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightIV"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rightIV"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:paddingStart="@dimen/spacing_s"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>